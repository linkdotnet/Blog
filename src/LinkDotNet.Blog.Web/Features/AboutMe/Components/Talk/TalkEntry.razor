@using LinkDotNet.Blog.Domain

<li class="pb-1">
    <div class="row">
        <div class="col-10" id="talk-display-content">
            <p class="text-muted mb-0">@Talk.PublishedDate.ToString("dd/MM/yyyy")</p>
            <strong>@Talk.PresentationTitle</strong>
            <p id="talk-place" class="text-muted">@Talk.Place</p>
            <p id="talk-description">
                @MarkdownConverter.ToMarkupString(Talk.Description)
            </p>
        </div>
        <div class="col-2">
            @if (ShowAdminActions)
            {
                <button type="button" class="btn btn-default" aria-label="Delete Skill" @onclick="() => TalkDeleted.InvokeAsync()">
                    <i class="bin2" aria-hidden="true"></i>
                </button>
            }
        </div>
    </div>
</li>
<hr/>

@code {
    [Parameter]
    public bool ShowAdminActions { get; set; }

    [Parameter]
    public EventCallback TalkDeleted { get; set; }

    [Parameter]
    public Talk Talk { get; set; }
}